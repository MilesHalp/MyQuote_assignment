<!-- This file provides an interface of all the users in the db for admins -->
<p style="color: green"><%= notice %></p> 

<% content_for :title, "Users" %>

<h3>Manage Users</h3>

<div id="users">
  <% @users.each do |user| %>
    <div class="user card mb-4"> <!-- Bootstrap container and margin components -->
      <!-- Improves the formatting when displaying each user's profile whilst removing redundant code-->
      <div class="card-body">
        <p class="card-text"><span style="font-weight: 600;">First Name:</span> <%= user.fname %></p> <!-- Bootstrap text container -->
        <p class="card-text"><span style="font-weight: 600;">Last Name:</span> <%= user.lname %></p>
        <p class="card-text"><span style="font-weight: 600;">Email Address:</span> <%= user.email %></p>
        <p class="card-text"><span style="font-weight: 600;">Account Status:</span> <%= user.status %></p>
        <a href="<%= user_path(user) %>" class="btn btn-primary">Manage User</a> <!-- Bootstrap button component -->
      </div>
    </div>
    <!--
    <p>
      <%= link_to "Show this user", user %>
    </p>
    -->
  <% end %>
</div>
